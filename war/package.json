{
  "name": "jenkins-ui",
  "version": "1.0.0",
  "description": "Jenkins User Interface",
  "license": "MIT",
  "author": {
    "name": "Tom Fennelly",
    "email": "tom.fennelly@gmail.com",
    "url": "https://github.com/tfennelly"
  },
  "private": true,
  "main": "dist/web-components.js",
  "webapp": "src/main/webapp/jsbundles/web-components.js",
  "dist": {},
  "targets": {
    "webapp": {
      "distDir": "src/main/webapp/jsbundles",
      "includeNodeModules": true,
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "scripts": {
    "dev": "webpack --config webpack.config.js",
    "prod": "webpack --config webpack.config.js --mode=production",
    "build": "yarn prod && yarn css:build && yarn build:bundle",
    "build:bundle": "parcel build --public-url ./ src/main/ts/index.ts",
    "css:build": "SIROCCO=false sirocco-wc buildCss",
    "css:watch": "SIROCCO=false sirocco-wc watchCss",
    "start": "yarn dev --watch",
    "lint:js": "eslint . --ext js",
    "lint:js-ci": "eslint . --ext js -f checkstyle -o target/eslint-warnings.xml",
    "lint:css": "stylelint src/main/less",
    "lint:css-ci": "stylelint src/main/less --custom-formatter stylelint-formatter.js -o target/stylelint-warnings.xml",
    "lint:css:fix": "stylelint src/main/less --fix",
    "lint:ci": "yarn lint:js-ci && yarn lint:css-ci",
    "lint": "yarn lint:js && yarn lint:css",
    ":add": "SWC_PREFIX=jenkins- sirocco-wc add"
  },
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "7.18.10",
    "@parcel/config-default": "^2.8.0",
    "@parcel/core": "^2.8.0",
    "@parcel/transformer-js": "^2.8.0",
    "@parcel/transformer-typescript-tsc": "^2.8.0",
    "autoprefixer": "10.4.8",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "4.0.0",
    "eslint": "8.21.0",
    "handlebars": "4.7.7",
    "handlebars-loader": "1.7.2",
    "less": "4.1.3",
    "less-loader": "11.0.0",
    "mini-css-extract-plugin": "2.6.1",
    "parcel": "^2.8.0",
    "postcss": "8.4.14",
    "postcss-loader": "7.0.1",
    "style-loader": "3.3.1",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-remove-empty-scripts": "0.8.1"
  },
  "dependencies": {
    "@babel/preset-env": "7.18.10",
    "@material/mwc-checkbox": "^0.27.0",
    "@material/mwc-formfield": "^0.27.0",
    "babel-loader": "8.2.5",
    "bootstrap": "3.4.1",
    "hotkeys-js": "3.9.4",
    "jenkins-js-modules": "1.5.4",
    "jquery": "3.6.0",
    "lit": "^2.4.1",
    "lodash": "4.17.21",
    "postcss-less": "6.0.0",
    "sirocco-wc": "^1.1.5",
    "sortablejs": "1.15.0",
    "stylelint-checkstyle-reporter": "0.2.0",
    "tailwind": "^4.0.0",
    "window-handle": "1.0.1"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "packageManager": "yarn@3.2.2"
}
